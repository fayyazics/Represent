<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView20"
            android:background="@drawable/banner"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Representative Virgil Goode"
            android:id="@+id/textView7"
            android:layout_marginTop="19dp"
            android:textColor="#ffffff"
            android:fontFamily=".AppleSystemUIFont"
            android:textSize="18dp"
            android:layout_alignParentTop="true"
            android:layout_alignEnd="@+id/textView9" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Independent"
            android:id="@+id/textView8"
            android:layout_below="@+id/textView7"
            android:layout_alignStart="@+id/textView7"
            android:layout_marginStart="20dp"
            android:textColor="#ffffff"
            android:textStyle="italic"
            android:fontFamily="ultra light" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageButton"
            android:background="@drawable/twitter2"
            android:layout_alignTop="@+id/imageButton2"
            android:layout_alignStart="@+id/textView8" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="9dp"
            android:id="@+id/imageButton2"
            android:background="@drawable/mail2"
            android:layout_below="@+id/textView8"
            android:layout_toEndOf="@+id/imageButton" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="9dp"
            android:id="@+id/imageButton3"
            android:background="@drawable/website2"
            android:layout_below="@+id/textView8"
            android:layout_toEndOf="@+id/imageButton2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Term End Date: December 30, 2016"
            android:id="@+id/textView9"
            android:textColor="#2f3e9e"
            android:layout_below="@+id/imageView20"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp" />

        <ImageView
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:id="@+id/imageView21"
            android:background="@drawable/virgil"
            android:layout_alignTop="@+id/textView7"
            android:layout_toStartOf="@+id/textView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="CALIFORNIA COMMITTEE ASSIGNMENTS"
        android:id="@+id/textView11"
        android:layout_marginTop="11dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="BILLS SPONSORED"
        android:id="@+id/textView13"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@+id/imageView24"
        android:layout_alignStart="@+id/imageView24" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView24"
        android:layout_below="@+id/textView11"
        android:layout_alignStart="@+id/textView11"
        android:src="@drawable/committees" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView25"
        android:layout_below="@+id/textView13"
        android:layout_alignStart="@+id/textView13"
        android:src="@drawable/bills" />

</RelativeLayout>