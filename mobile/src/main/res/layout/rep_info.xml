<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="300dp"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:paddingLeft="5dp"
    android:weightSum="1">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/photo"
        android:src="@drawable/diane"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Democrat"
            android:id="@+id/party"

            android:layout_gravity="left"
            android:layout_below="@+id/photo"
            android:layout_marginStart="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Sen. Diane Feinstein"
            android:id="@+id/name"
            android:paddingLeft="15dp"
            android:textSize="19dp"
            android:textStyle="bold"
            android:fontFamily=".AppleSystemUIFont"
            android:textColor="#000000"
            android:layout_gravity="left"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/photo"
            android:layout_marginTop="21dp" />
            <ImageButton
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:id="@+id/twitter"
                android:background="@drawable/twitter"
                android:layout_gravity="center_horizontal"
                android:layout_alignTop="@+id/mail"
                android:layout_toStartOf="@+id/mail"
                android:layout_marginEnd="21dp" />

            <ImageButton
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:id="@+id/mail"
                android:background="@drawable/mail"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="23dp"
                android:layout_alignTop="@+id/website"
                android:layout_toStartOf="@+id/website" />

            <ImageButton
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:id="@+id/website"
                android:background="@drawable/website"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/name"
                android:layout_alignEnd="@+id/name"
                android:layout_marginTop="21dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:id="@+id/tweets"
        android:layout_height="wrap_content"
        android:layout_below="@+id/party"
        android:layout_alignStart="@+id/party"></LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/arrow"
        android:background="@drawable/downarrow"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/tweets"
        android:layout_centerHorizontal="true" />

</RelativeLayout>

</LinearLayout>